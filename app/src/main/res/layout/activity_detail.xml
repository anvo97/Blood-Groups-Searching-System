<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    tools:context=".View.News.DetailActivity">
    <TextView
        android:id="@+id/txtTitleDetail"
        android:textColor="#0D66AD"
        android:text="Sau sân bay 10000 tỷ , phan thiết sắp có thêm tổ hợp giải trí tỷ đô"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="23dp"/>
    <TextView
        android:text="08:00 16/03/2019"
        android:layout_below="@+id/txtTitleDetail"
        android:id="@+id/txtTimeDetail"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lvDetailnews"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtTimeDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>