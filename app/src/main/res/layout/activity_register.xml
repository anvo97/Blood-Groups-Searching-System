<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Register.RegisterActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@drawable/custom_head_login"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="79dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo_hospital" />

        <TextView
            android:textSize="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="270dp"
            android:textColor="@color/colorwhite"
            android:text="Đăng Ký"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:elevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_shadow_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <EditText
                    android:id="@+id/edtFullname"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/icon_user"
                    android:background="@drawable/custom_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Tên đầy đủ"
                    android:inputType="text"
                    android:maxLines="1"
                    android:lines="1"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:background="@drawable/custom_shadow_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <EditText
                    android:id="@+id/edtEmailRegister"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/icon_email"
                    android:background="@drawable/custom_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:lines="1"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:background="@drawable/custom_shadow_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <EditText
                    android:id="@+id/edtPhoneNumber"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/icon_phone"
                    android:background="@drawable/custom_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Số điện thoại"
                    android:inputType="text"
                    android:maxLines="1"
                    android:lines="1"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:background="@drawable/custom_shadow_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <EditText
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/icoin_address"
                    android:id="@+id/edtAddress"
                    android:hint="Địa chỉ"
                    android:background="@drawable/custom_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:lines="1"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:background="@drawable/custom_shadow_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <EditText
                    android:id="@+id/edtPasswordRegister"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/icon_key"
                    android:background="@drawable/custom_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:lines="1"
                    />

                <ImageButton
                    android:id="@+id/btn_eye_off"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:src="@drawable/login_btn_eye_off"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"
                    android:layout_marginEnd="10dp"
                    />

                <ImageButton
                    android:id="@+id/btn_eye_on"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:src="@drawable/login_btn_eye_on"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"
                    android:layout_marginEnd="10dp"
                    />

            </RelativeLayout>

            <FrameLayout
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:id="@+id/btnRegister"
                android:background="@drawable/custom_button_login"
                android:layout_width="300dp"
                android:layout_height="40dp">
                <TextView
                    android:textColor="@color/colorwhite"
                    android:id="@+id/txtRegister"
                    android:layout_gravity="center"
                    android:text="Đăng Ký"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ProgressBar
                    android:id="@+id/progressbarRegister"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textview"
                android:text="Đã có mật khẩu?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtIntLogin"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/textview"
                android:text="Đăng Nhập"
                android:textColor="@color/backgroud_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>