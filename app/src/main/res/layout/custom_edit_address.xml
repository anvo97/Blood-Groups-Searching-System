<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlStreet"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Đường:"
            android:textColor="#000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:hint="254 Nguyễn Văn Linh"
            android:inputType="text"
            android:paddingEnd="10dp"
            android:textColor="#000"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPhuong"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rlStreet"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Phường:"
            android:textColor="#000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtPhuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:hint="Hòa Cường Nam"
            android:inputType="text"
            android:paddingEnd="10dp"
            android:textColor="#000"
            android:textSize="16dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCounty"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rlPhuong"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Quận:"
            android:textColor="#000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtCounty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:hint="Hải Châu"
            android:inputType="text"
            android:paddingEnd="10dp"
            android:textColor="#000"
            android:textSize="16dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rlCounty"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Thành phố:"
            android:textColor="#000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:hint="Đà Nẵng"
            android:inputType="text"
            android:paddingEnd="10dp"
            android:textColor="#000"
            android:textSize="16dp"

            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlCity"
        android:weightSum="10">

        <Button
            android:id="@+id/btn_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="cancel" />

        <Button
            android:id="@+id/btn_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="ok" />

    </LinearLayout>

</RelativeLayout>